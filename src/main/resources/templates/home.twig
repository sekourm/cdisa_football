{% extends "base.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}

    {% include "classpath:/templates/_partials/navbar.twig" ignore missing %}

    <div class="container">

        <h1>Derniers articles</h1>

        {% for article in articles %}
            <div class="card mb-3">

                {% if article.image %}
                    {# <img class="card-img-top" src="https://picsum.photos/600/600" alt="Card image cap"> #}
                {% endif %}

                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content }}</p>
                    <p class="card-text">
                        <small class="text-muted">Derni√®re modification {{ article.createdAt }}</small>
                    </p>
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}
